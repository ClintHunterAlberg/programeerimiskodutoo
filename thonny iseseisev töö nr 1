#Astendamine

aluse=input("Sisestage astme alus: ")
astendaja=input("Sisestage astendaja: ")
print(int(aluse)**int(astendaja))

#Trahv

nimi=input("Sisestage oma nimi: ")
lubatud_kiirus=input("Sisestage lubatud kiirus (km/h): ")
tegelik_kiirus=input("Sisestage tegelik kiirus (km/h): ")
kiiruse_vahe=(int(tegelik_kiirus))-(int(lubatud_kiirus))
trahv=kiiruse_vahe*3
def MIN(trahv):
    return (min(trahv))
trahv = set([190,trahv])
print(nimi+", kiiruse ületamise eest on teie trahv "+(str(MIN(trahv)))+" eurot.")
